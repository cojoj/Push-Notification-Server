%html
  %head
    %title PNS - Add
    %meta{:charset => "utf-8"}
    %link{:href => "/css/bootstrap.css", :rel => "stylesheet"}
    %link{:href => "/css/bootstrap-theme.css", :rel => "stylesheet"}
  
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => '/'} PNS
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => '/'}Home
            %li
              %a{:href => '/devices'}Devices
            %li.active
              %a{:href => '/add'}Add
              
    .container.page-header                   
      %h3 Add new device to database:           
      
    %form.form-horizontal{:role => "form", :action => "/register", :method => "POST"}
      .container.form-group
        %label.col-sm-2.control-label{:for => "owner"} Owner
        .container.col-sm-10
          %input.form-control{:type => "text", :name => "owner", :placeholder => "Insert name of device owner here..."}
          
      .container.form-group
        %label.col-sm-2.control-label{:for => "id"} ID
        .container.col-sm-10
          %textarea.form-control{:rows => "3", :name => "id", :placeholder => "Put device's ID here..."}
          
      .container.form-group
        %label.col-sm-2.control-label{:for => "os"} Operating System
        .container.col-sm-10
          %select.form-control{:id => "os", :name => "os"}
            %option Android
            %option iOS
            
      .container.form-group
        .container.col-sm-offset-2.col-sm-10
          %button.btn.btn-primary.btn-lg{:type => "submit"} Save to database
      
%script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"}    
%script{:src => "/js/bootstrap.js"}      