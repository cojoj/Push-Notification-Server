%html
  %head
    %title PNS - Home
    %meta{:charset => "utf-8"}
    %link{:href => "/css/bootstrap.css", :rel => "stylesheet"}
    %link{:href => "/css/bootstrap-theme.css", :rel => "stylesheet"}
    
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => '/'} PNS
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li.active
              %a{:href => '/'}Home
            %li
              %a{:href => '/devices'}Devices
            %li
              %a{:href => '/add'}Add
              
    .container.page-header                   
      %h2 Send new notification by setting the message content and notification recivers:
      
    %form.form-horizontal{:role => "form", :action => "/send", :method => "POST"}
      .container.form-group
        %label.col-sm-2.control-label{:for => "select"} Devices
        .container.col-sm-10
          %select.form-control{:id => "select", :name => "devicesIDs[]", :multiple => true}
            - @devices.each do |device|
              %option{:value => "#{device.id}"}= device.owner
              
      .container.form-group
        %label.col-sm-2.control-label{:for => "message"} Message
        .container.col-sm-10
          %textarea.form-control{:rows => "3", :name => "message", :placeholder => "Enter your message here..."}

      .container.form-group
        .container.col-sm-offset-2.col-sm-10
          %button.btn.btn-primary.btn-lg{:type => "submit"} Send notification
        
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"}    
    %script{:src => "/js/bootstrap.js"}